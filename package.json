{
  "name": "paper-rock-scissor",
  "version": "0.0.1",
  "description": "Game time!",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest",
    "cucumber": "cucumber-js test/ --require-module ts-node/register --require 'test/**/*.ts' --tags @api",
    "deploy:docker:linux": "sudo docker-compose -f docker-compose.yml up -d --build",
    "all": "yarn lint && yarn test && yarn cucumber",
    "build": "tsc",
    "bundle": "uglifyjs build/index.js -c -m -o build/main.min.js",
    "serv": "node build/main.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scubadjn/paper-rock-scissors.git"
  },
  "author": "Daniel Nystr√∂m",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scubadjn/paper-rock-scissors/issues"
  },
  "homepage": "https://github.com/scubadjn/paper-rock-scissors#readme",
  "dependencies": {
    "ajv": "^6.10.0",
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "swagger-ui-express": "^4.0.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cucumber": "^4.0.5",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/uuid": "^3.4.4",
    "axios": "^0.18.0",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
